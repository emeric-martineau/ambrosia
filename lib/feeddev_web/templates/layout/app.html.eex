<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Site Properties -->
  <title>Homepage - Semantic</title>

  <link rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/semantic.min.css") %>"/>
  <link rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/app.css") %>"/>

  <script
    src="https://code.jquery.com/jquery-3.1.1.min.js"
    integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
    crossorigin="anonymous"></script>
  <script src="<%= Routes.static_path(@conn, "/js/semantic.min.js") %>"></script>
  <script>
  $(document)
    .ready(function() {

      // fix menu when passed
      $('.masthead')
        .visibility({
          once: false,
          onBottomPassed: function() {
            $('.fixed.menu').transition('fade in');
          },
          onBottomPassedReverse: function() {
            $('.fixed.menu').transition('fade out');
          }
        })
      ;

      // create sidebar and attach to menu open
      $('.ui.sidebar')
        .sidebar('attach events', '.toc.item')
      ;

    })
  ;
  </script>
</head>
<body>

<!-- Following Menu -->
<div class="ui large top fixed hidden menu">
  <div class="ui container">
      <%= link "Home", class: "active item", to: "/" %>
      <a class="item" href="https://www.phoenixframework.org">Phoenix</a>
      <a class="item" href="https://elixir-lang.org">Elixir</a>
      <a class="item" href="https://www.erlang.org">Erlang</a>
      <div class="right menu">
        <%= if Pow.Plug.current_user(@conn) do %>
          <div class="item">
            <%= link "Edit profile", class: "ui button", to: Routes.pow_registration_path(@conn, :edit) %>
          </div>
          <div class="item">
            <%= link "Log out", class: "ui button", to: Routes.page_path(@conn, :logout) %>
          </div>
        <% else %>
          <div class="item">
            <%= link "Register", class: "ui primary button", to: Routes.pow_registration_path(@conn, :new) %>
          </div>
          <div class="item">
            <%= link "Sign in", class: "ui button", to: Routes.pow_session_path(@conn, :new) %>
          </div>
        <% end %>
    </div>
  </div>
</div>

<!-- Sidebar Menu -->
<div class="ui vertical inverted sidebar menu">
    <%= link "Home", class: "active item", to: "/" %>
    <a class="item" href="https://www.phoenixframework.org">Phoenix</a>
    <a class="item" href="https://elixir-lang.org">Elixir</a>
    <a class="item" href="https://www.erlang.org">Erlang</a>
    <%= if Pow.Plug.current_user(@conn) do %>
        <%= link "Edit profile", class: "ui item", to: Routes.pow_registration_path(@conn, :edit) %>
        <%= link "Log out", class: "ui item", to: Routes.page_path(@conn, :logout) %>
    <% else %>
        <%= link "Register", class: "ui item", to: Routes.pow_registration_path(@conn, :new) %>
        <%= link "Sign in", class: "ui item", to: Routes.pow_session_path(@conn, :new) %>
    <% end %>
</div>

<!-- Page Contents -->
<div class="pusher">
  <div class="ui inverted vertical center aligned segment">

    <div class="ui container">
      <div class="ui large secondary inverted pointing menu">
        <a class="toc item">
          <i class="sidebar icon"></i>
        </a>
        <%= link "Home", class: "active item", to: "/" %>
        <a class="item" href="https://www.phoenixframework.org">Phoenix</a>
        <a class="item" href="https://elixir-lang.org">Elixir</a>
        <a class="item" href="https://www.erlang.org">Erlang</a>
        <div class="right item">
          <%= if Pow.Plug.current_user(@conn) do %>
            <%= link "Edit profile", class: "ui inverted button", to: Routes.pow_registration_path(@conn, :edit) %>
            <span class="button-space-menu"></span>
            <%= link "Log out", class: "ui inverted button", to: Routes.page_path(@conn, :logout) %>
          <% else %>
            <%= link "Register", class: "ui inverted button", to: Routes.pow_registration_path(@conn, :new) %>
            <span class="button-space-menu"></span>
            <%= link "Sign in", class: "ui inverted button", to: Routes.pow_session_path(@conn, :new) %>
          <% end %>
        </div>
      </div>
    </div>

  </div>

  <%= render @view_module, @view_template, assigns %>

  <div class="ui inverted vertical footer segment">
    <div class="ui container">
      <div class="ui stackable inverted divided equal height stackable grid">
        <div class="three wide column">
          <h4 class="ui inverted header">About</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Sitemap</a>
            <a href="#" class="item">Contact Us</a>
            <a href="#" class="item">Religious Ceremonies</a>
            <a href="#" class="item">Gazebo Plans</a>
          </div>
        </div>
        <div class="three wide column">
          <h4 class="ui inverted header">Services</h4>
          <div class="ui inverted link list">
            <a href="#" class="item">Banana Pre-Order</a>
            <a href="#" class="item">DNA FAQ</a>
            <a href="#" class="item">How To Access</a>
            <a href="#" class="item">Favorite X-Men</a>
          </div>
        </div>
        <div class="seven wide column">
          <h4 class="ui inverted header">Footer Header</h4>
          <p>Extra space for a call to action inside the footer that could help re-engage users.</p>
        </div>
      </div>
    </div>
  </div>
</div>

</body>

</html>
